{
  "name": "client",
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "prebuild": "npm -w @discord-clone/shared run build",
    "build": "tsc -p tsconfig.json && vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest run",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@discord-clone/shared": "*",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@jitsi/rnnoise-wasm": "^0.2.1",
    "@livekit/components-react": "^2.9.17",
    "@livekit/components-styles": "^1.2.0",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "@tanstack/react-virtual": "^3.13.2",
    "@types/dompurify": "^3.0.5",
    "axios": "^1.13.2",
    "classnames": "^2.5.1",
    "dompurify": "^3.3.1",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "livekit-client": "^2.16.0",
    "lucide-react": "^0.556.0",
    "mediasoup-client": "^3.18.3",
    "quill": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.10.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "electron": "39.2.7",
    "electron-builder": "^26.0.12",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.2.7",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^3.0.6"
  },
  "build": {
    "appId": "com.clovertalk.desktop",
    "productName": "CloverTalk",
    "directories": {
      "output": "release",
      "buildResources": "electron/resources"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "electron/database/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "asar": true,
    "win": {
      "artifactName": "clover_installer.${ext}",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ]
    }
  }
}
