{
  "name": "discord-clone-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:client": "npm run dev --workspace=apps/client",
    "dev:server": "npm run dev --workspace=apps/server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "npm run lint --workspace=apps/client",
    "lint:server": "npm run lint --workspace=apps/server",
    "format": "npm run format:client && npm run format:server",
    "format:client": "npm run format --workspace=apps/client",
    "format:server": "npm run format --workspace=apps/server",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "typecheck:client": "npm run typecheck --workspace=apps/client",
    "typecheck:server": "npm run typecheck --workspace=apps/server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "npm run build --workspace=apps/client",
    "build:server": "npm run build --workspace=apps/server",
    "test": "npm run test:client && npm run test:server",
    "test:client": "npm run test --workspace=apps/client",
    "test:server": "npm run test --workspace=apps/server"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "concurrently": "^8.0.0",
    "electron": "39.2.7",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "lucide-react": "^0.559.0"
  }
}
