{
  "name": "discord-clone-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:client": "npm run dev --workspace=apps/client",
    "dev:server": "npm run dev --workspace=apps/server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron": "39.2.7",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "lucide-react": "^0.559.0"
  }
}
